@model Final.Models.User

@{
    ViewData["Title"] = "Registrarse";
}
<h1>@ViewData["Title"]</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterCompany">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" name="name" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" name="email" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CUITCUIL" class="control-label"></label>
                <input asp-for="CUITCUIL" class="form-control" name="CUITCUIL" />
                <span asp-validation-for="CUITCUIL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" name="password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="RegisterCompany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    
        <script type="text/javascript">

        function openSuccessModal(strMessage) {
        var myDiv = document.getElementById('MyModalSuccessAlertBody');

        myDiv.innerHTML = strMessage;
        $('#myModalSuccess').modal('show');
        }

        function openErrorModal(strMessage) {
            var myDiv2 = document.getElementById('MyModalErrorAlertBody');

            myDiv2.innerHTML = strMessage;
            $('#myModalError').modal('show');
        }

        $(document).ready(function () {
            var msgSuccess = "@TempData["SuccessMessage"]";
            var msgError = "@TempData["ErrorMessage"]";

            if (msgSuccess) {
                openSuccessModal(msgSuccess);
            } else if (msgError) {
                openErrorModal(msgError);
            }
         })

        </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}