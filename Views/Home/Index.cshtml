@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>

        <div class="text-center">
            <h1 class="display-4 mt-5">Bienvenido a <b>BetoMarket</b>!</h1>
            <p>Ingrese o registrese para poder continuar.</p>

            <form asp-controller="Home" asp-action="Login" method="post">
                <div class="imgcontainer">
                    <img src="https://www.pngall.com/wp-content/uploads/5/User-Profile-PNG-Image.png" alt="Avatar" class="" width="250" height="200">
                </div>

                <div class="container">
                    <label for="uname"><b>CUIT</b></label>
                    <input class="form-control w-25 mx-auto" type="text" placeholder="Ingrese su CUIT" name="CUITCUIL">

                    <label class="mt-1" for="psw"><b>Contraseña</b></label>
                    <input class="form-control mb-5 w-25 mx-auto" type="password" placeholder="Ingrese su contraseña" name="password">

                    <input type="submit" class="btn-primary mr-3" value="Ingresar" />
                    <button asp-controller="Home" asp-action="RegisterAs" class="btn-primary">Registrarse</button>

                </div>

            </form>



        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">

            <!--Success Dialog Start-->

            <div id="myModalSuccess" class="modal fade text-width:30%;" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2>Informacion</h2>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div id="MyModalSuccessAlertBody" class="modal-body alert alert-success">

                        </div>
                        <div class="modal-footer">
                            &nbsp;
                            <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <!--Success Dialog End-->
            <!--Error Dialog Start-->

            <div id="myModalError" class="modal fade text-width:30%;" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2>Informacion</h2>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div id="MyModalErrorAlertBody" class="modal-body alert alert-danger">

                        </div>
                        <div class="modal-footer">
                            &nbsp;
                            <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <!--Error Dialog End-->

        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    
        <script type="text/javascript">

        function openSuccessModal(strMessage) {
        var myDiv = document.getElementById('MyModalSuccessAlertBody');

        myDiv.innerHTML = strMessage;
        $('#myModalSuccess').modal('show');
        }

        function openErrorModal(strMessage) {
            var myDiv2 = document.getElementById('MyModalErrorAlertBody');

            myDiv2.innerHTML = strMessage;
            $('#myModalError').modal('show');
        }

        $(document).ready(function () {
            var msgSuccess = "@TempData["SuccessMessage"]";
            var msgError = "@TempData["ErrorMessage"]";

            if (msgSuccess) {
                openSuccessModal(msgSuccess);
            } else if (msgError) {
                openErrorModal(msgError);
            }
         })

        </script>
    
</body>
</html>

